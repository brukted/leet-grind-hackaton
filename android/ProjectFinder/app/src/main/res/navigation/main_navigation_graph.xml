<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/register2">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.leetgrind.projectfinder.ui.home.HomeFragment"
        android:label="Home" />
    <fragment
        android:id="@+id/applicationsFragment"
        android:name="com.leetgrind.projectfinder.ui.applications.ApplicationsFragment"
        android:label="Applications" />
    <fragment
        android:id="@+id/ideasFragment"
        android:name="com.leetgrind.projectfinder.ui.ideas.IdeasFragment"
        android:label="Ideas" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.leetgrind.projectfinder.ui.profile.ProfileFragment"
        android:label="Profile" />
    <fragment
        android:id="@+id/register2"
        android:name="com.leetgrind.projectfinder.ui.authentication.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_register2_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.leetgrind.projectfinder.ui.authentication.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_register2"
            app:destination="@id/register2" />
    </fragment>

</navigation>